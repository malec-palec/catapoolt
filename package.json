{
  "name": "step-over",
  "version": "1.0.0",
  "description": "js13kGames 2025 competition entry",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview --open --host",
