    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "author": "glebv",
  "license": "MIT",
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.2.3",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "js13k-vite-plugins": "^0.4.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-singlefile": "^2.3.0"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*": "prettier --write -u"
  },
  "type": "module"
